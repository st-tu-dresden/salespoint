<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="SalespointFramework">
  		<jta-data-source>java:/DefaultDS</jta-data-source>	<!-- <-wasn das? -->
  		<class>org.salespointframework.core.money.Quantity</class>
  		<class>org.salespointframework.core.money.Money</class>
  		<class>org.salespointframework.core.money.Currency</class>
  		<class>org.salespointframework.core.money.Metric</class>
  		<class>org.salespointframework.core.money.RoundDownStrategy</class>
  		<class>org.salespointframework.core.money.RoundStrategy</class>
  		
  		
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:derby:\salespoint\simpleDb;create=true" />
			<property name="javax.persistence.jdbc.user" value="test" />
			<property name="javax.persistence.jdbc.password" value="test" />

			<!-- EclipseLink should create the database schema automatically -->
			<!-- Das erste mal den Kommentar unten entfernen oder so, siehe Tutorial -->
			<!-- <property name="eclipselink.ddl-generation" value="create-tables" />  -->
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />
		</properties>
  		
  		<!-- AAAAAAAAALT 
  		<properties>
    		<property name="hibernate.hbm2ddl.auto"
      		value="create-drop"/>
  		</properties>
  		-->
	</persistence-unit>
</persistence>
